$('.flash-message').html('<%= j render 'shared/flash' %>');

$('.answer-errors.<%= @answer.id %>').html('<%= render 'shared/errors', resource: @answer %>');

<% unless @answer.errors.present? %>
	$('.answers').html('<%= j render @answer.question.answers.sort_by_best %>');
	$(document).trigger("ajax:success")
<% end %>

